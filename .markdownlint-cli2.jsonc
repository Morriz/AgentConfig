{
  // Keep this aligned with the VSCode `markdownlint` extension defaults (markdownlint rules),
  // with repo-specific adjustments for our front-matter based command files.
  "config": {
    "default": true,

    // Disabled by default in the VSCode extension.
    "MD013": false,

    // Treat our front matter `description:` as the "title" for MD041.
    "MD041": { "front_matter_title": "^\\s*description\\s*[:=]" }
  },
  "globs": ["**/*.md"],
  "ignores": ["**/dist/**", "**/.venv/**", "**/.history/**"]
}

